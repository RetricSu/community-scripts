{
  "name": "community-scripts",
  "version": "1.0.0",
  "description": "CKB Script validation tool for testing SDKs against deployment configurations",
  "main": "dist/index.js",
  "bin": {
    "community-scripts": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "check": "npx @biomejs/biome check --write src",
    "fmt": "npx @biomejs/biome format --write src",
    "lint": "npx @biomejs/biome lint --write src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node --transpile-only src/index.ts"
  },
  "keywords": [
    "ckb",
    "nervos",
    "sdk",
    "validation",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^14.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
